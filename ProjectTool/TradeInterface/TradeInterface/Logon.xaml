<Window x:Class="TradeInterface.Logon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="260" Width="300" FontSize="14"  Icon="Images/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">用户名:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtName" VerticalAlignment="Center" HorizontalAlignment="Left" Width="160" Height="30"></TextBox>

        <Label Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">密码:</Label>
        <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="psw" VerticalAlignment="Center" HorizontalAlignment="Left" Width="160" Height="30"></PasswordBox>
        
        <CheckBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Content="记住密码" Margin="0,0,0,0" x:Name="ckbSavePsw"></CheckBox>
        
        <Button Grid.Row="4" Grid.ColumnSpan="2" Width="100" Height="26" Click="Button_Click">登录</Button>
    </Grid>
</Window>
