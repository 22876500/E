<Window x:Class="CATSInterface.wCATSConfigEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wCATSConfigEdit" Height="300" Width="300">
    <Grid >
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
                <Setter Property="Width" Value="120"></Setter>
                <Setter Property="Height" Value="23"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Bottom" HorizontalAlignment="Right">CATS路径配置:</Label>
        <TextBox Grid.Column="1" x:Name="txtPath"></TextBox>
        
        <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" Width="100" Content="保存" Click="Button_Click"></Button>
    </Grid>
</Window>
