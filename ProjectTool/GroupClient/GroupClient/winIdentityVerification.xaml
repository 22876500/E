<Window x:Class="GroupClient.winIdentityVerification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="身份验证" Height="180" Width="300" Icon="Images\RighteousFury.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">用户名：</TextBlock>
        <TextBox x:Name="txtUserName" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBlock  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">  密码：</TextBlock>
        <!--<TextBox  x:Name="txtPsw" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" ></TextBox>-->
        <PasswordBox x:Name="pb" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"></PasswordBox>
        <Button Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="3" Width="60" Height="26" Content="验证" Click="Button_Click"></Button>
    </Grid>
</Window>
